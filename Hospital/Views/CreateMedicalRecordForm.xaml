<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Hospital.Views.CreateMedicalRecordForm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Hospital.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="CreateMedicalRecordForm">

    <Grid Padding="20" x:Name="rootGrid" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="Auto"/>
            <!-- Patient -->
            <RowDefinition Height="Auto"/>
            <!-- Doctor -->
            <RowDefinition Height="Auto"/>
            <!-- Date -->
            <RowDefinition Height="Auto"/>
            <!-- Time -->
            <RowDefinition Height="Auto"/>
            <!-- Department -->
            <RowDefinition Height="Auto"/>
            <!-- Upload Files -->
            <RowDefinition Height="*"/>
            <!-- Conclusion -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <!-- Labels -->
            <ColumnDefinition Width="*"/>
            <!-- Inputs -->
        </Grid.ColumnDefinitions>

        <!-- Title Row: spans both columns -->
        <TextBlock Text="Make Medical Record"
                   Grid.Row="0" Grid.ColumnSpan="2"
                   FontSize="20" 
                   FontWeight="Bold"
                   Foreground="Green"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Patient -->
        <TextBlock Grid.Row="1" Grid.Column="0"
                   Text="Patient:"
                   VerticalAlignment="Center"
                   FontWeight="Bold"
                   Margin="0,0,10,10"/>
        <TextBox Grid.Row="1" Grid.Column="1"
                 Text="{Binding PatientName}"
                 Margin="0,0,0,10"
                 IsReadOnly="True"/>

        <!-- Doctor -->
        <TextBlock Grid.Row="2" Grid.Column="0"
                   Text="Doctor:"
                   VerticalAlignment="Center"
                   FontWeight="Bold"
                   Margin="0,0,10,10"/>
        <TextBox Grid.Row="2" Grid.Column="1"
                 Text="{Binding DoctorName}"
                 Margin="0,0,0,10"
                 IsReadOnly="True"/>

        <!-- Date -->
        <TextBlock Grid.Row="3" Grid.Column="0"
                   Text="Date:"
                   VerticalAlignment="Center"
                   FontWeight="Bold"
                   Margin="0,0,10,10"/>
        <DatePicker Grid.Row="3" Grid.Column="1"
                    SelectedDate="{Binding AppointmentDateOffset, Mode=TwoWay}"
                    IsEnabled="False"
                    Margin="0,0,0,10"/>

        <!-- Time -->
        <TextBlock Grid.Row="4" Grid.Column="0"
                   Text="Time:"
                   VerticalAlignment="Center"
                   FontWeight="Bold"
                   Margin="0,0,10,10"/>
        <TextBox Grid.Row="4" Grid.Column="1"
                 Text="{Binding AppointmentTime}"
                 Margin="0,0,0,10"
                 IsReadOnly="True"/>

        <!-- Department -->
        <TextBlock Grid.Row="5" Grid.Column="0"
                   Text="Department:"
                   VerticalAlignment="Center"
                   FontWeight="Bold"
                   Margin="0,0,10,10"/>
        <TextBox Grid.Row="5" Grid.Column="1"
                 Text="{Binding Department}"
                 Margin="0,0,0,10"
                 IsReadOnly="True"/>

        <!-- Upload Files -->
        <TextBlock Grid.Row="6" Grid.Column="0"
                   Text="Upload Files:"
                   VerticalAlignment="Center"
                   FontWeight="Bold"
                   Margin="0,0,10,10"/>
        <Button Grid.Row="6" Grid.Column="1"
                Content="Select File(s)"
                Click="UploadFiles_Click"
                Margin="0,0,0,10"
                HorizontalAlignment="Left"/>

        <!-- Conclusions label -->
        <TextBlock Grid.Row="7" Grid.Column="0"
           Text="Conclusions:"
           FontWeight="Bold"
           VerticalAlignment="Top"
           Margin="0,0,10,0"/>

        <!-- Conclusions TextBox -->
        <TextBox Grid.Row="7" Grid.Column="1"
         AcceptsReturn="True"
         TextWrapping="Wrap"
         Text="{Binding Conclusion, Mode=TwoWay}"
         VerticalAlignment="Top"
         Height="120"
         Margin="0,0,0,10"/>


        <!-- Buttons -->
        <StackPanel Grid.Row="8" Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Cancel"
                    Click="CancelButton_Click"
                    Background="Red"
                    Foreground="White"
                    Width="80"
                    Margin="0,0,10,0"/>
            <Button Content="Confirm"
                    Click="SubmitButton_Click"
                    Background="Green"
                    Foreground="White"
                    Width="80"/>
        </StackPanel>
    </Grid>
</Window>
